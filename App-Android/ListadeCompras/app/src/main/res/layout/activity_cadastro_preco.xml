<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.listadecompras.listadecompras.CadastroProdutoActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/lblCadPrecoNomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_marginBottom="@dimen/espaco_padrao"/>
    <EditText
        android:id="@+id/edtCadPrecoPreco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_preco"
        android:inputType="number"
        android:digits="0123456789,"
        android:maxLength="8"/>
    <EditText
        android:id="@+id/edtCadPrecoMercado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_mercado"
        android:maxLength="80"/>
    <EditText
        android:id="@+id/edtCadPrecoObservacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_observacao"
        android:maxLength="80" />
</LinearLayout>
