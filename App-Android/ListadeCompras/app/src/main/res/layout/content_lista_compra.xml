<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_lista_compra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.listadecompras.listadecompras.ListaCompraActivity"
    tools:showIn="@layout/activity_lista_compra">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_banner_id_home"
        android:layout_marginBottom="@dimen/espaco_padrao">
    </com.google.android.gms.ads.AdView>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/Listagem_compra"
        android:layout_height="match_parent"
    />
</LinearLayout>
