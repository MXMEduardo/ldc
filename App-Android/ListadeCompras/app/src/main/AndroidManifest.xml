<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.listadecompras.listadecompras">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ListaCompraActivity"
            android:label="@string/title_activity_lista_compra"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".CadastroListaActivity"
            android:label="@string/title_activity_cadastro_lista"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CadastroProdutoActivity"
            android:label="@string/title_activity_cadastro_produto"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ListaPrecosActivity"
            android:label="@string/title_activity_lista_precos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CadastroPrecoActivity"
            android:label="@string/title_activity_cadastro_preco"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ListaDeComprasActivity"
            android:label="@string/title_activity_lista_de_compras"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdicionaProdutoEmListaActivity"
            android:label="@string/title_activity_adiciona_produto_em_lista" />
        <activity
            android:name=".SelecaoDeProdutoActivity"
            android:label="@string/title_activity_selecao_de_produto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppCompat.TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>